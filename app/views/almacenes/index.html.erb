<h1>Listing almacenes</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Direccion</th>
    <th>Codigo</th>
  </tr>

<% @almacenes.each do |almacen| %>
  <tr>
    <td><%=h almacen.nombre %></td>
    <td><%=h almacen.direccion %></td>
    <td><%=h almacen.codigo %></td>
    <td><%= link_to 'Show', almacen %></td>
    <td><%= link_to 'Edit', edit_almacen_path(almacen) %></td>
    <td><%= link_to 'Destroy', almacen, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New almacen', new_almacen_path %>