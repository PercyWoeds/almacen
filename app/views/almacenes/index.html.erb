<h1>Listing almacenes</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Direccion</th>
    <th>Codigo</th>
  </tr>

<% @almacenes.each do |almacen| %>
  <tr>
    <td><%=h almacen.nombre %></td>
    <td><%=h almacen.direccion %></td>
    <td><%=h almacen.codigo %></td>
    <td><%= link_to 'Ver', almacen %></td>
    <td><%= link_to 'Editar', edit_almacen_path(almacen) %></td>
    <td><%= link_to 'Borrar', almacen, :confirm => 'Estas seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo almacen', new_almacen_path %>