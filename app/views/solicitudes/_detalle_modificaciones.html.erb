<% if @solicitud.solicitud_modificaciones.size > 0 %>
  <h3>Lista de modificaciones anteriores</h3>
  <fieldset>
    <legend>Solicitudes anteriores (<%= @solicitud.solicitud_modificaciones.size %>)</legend>

    <% @solicitud.lista_modificaciones.each do |mod| %>
      <p>  
        <div class="input">
          <label>Fecha</label>
          <i><%= I18n.l mod[:fecha], :format => "%d de %B %Y, %H:%M:%S" %></i>
        </div>

        <div class="input">
          <label>Estado</label>
          <span class="estado resaltar"><%= mod[:estado] %></span>
        </div>

        <div class="input">
          <label>Descripci√≥n</label>
          <%= mod[:descripcion] %>
        </div>

        <div class="input">
          <label>Modificado por</label>
          <%= mod[:usuario] %>
        </div>

        <table>
          <tr>
            <th class="ui-state-default">Item</th>
            <th class="ui-state-default">Unidad Medida</th>
            <th class="ui-state-default">Cantidad</th>
          </tr>
        <% mod[:detalles].each do |item| %>
          <tr>
            <td><%= item[:item] %></td>
            <td><%= item[:unidad_medida] %></td>
            <td><%= item[:cantidad] %></td>
          </tr>
        <% end %>
        </table>
      </p>
      <hr/>
    <% end %>
  </fieldset>
<% else %>
  <h3>No se han realizado modificaciones al estado</h3>
<% end  %>
