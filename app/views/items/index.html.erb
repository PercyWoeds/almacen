<% content_for :title do %>
Items
<% end %>
<h1>Items</h1>

<table>
  <tr>
    <th class="ui-state-default">Partida</th>
    <th class="ui-state-default">Codigo</th>
    <th class="ui-state-default">Nombre</th>
    <th class="ui-state-default">Medida</th>
    <th class="ui-state-default">Imagen</th>
    <th class="ui-state-default"></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.partida %></td>
    <td><%=h item.codigo %></td>
    <td><%=h item.nombre %></td>
    <td><%=h item.unidad_medida.abreviacion %></td>
    <td><%= image_tag item.foto.url(:mini) %></td>
    <td>
      <%= link_to 'Ver', item_path(item, :page => @page ) %>
      <%= link_to 'Editar', edit_item_path(item, :page => @page) %>
      <%= link_to 'Borrar', item, :confirm => 'Estas seguro?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo item', new_item_path %>
<%= will_paginate @items %>
